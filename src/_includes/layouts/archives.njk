{% extends 'layouts/base.njk' %}
{% set pageType = 'archives' %}

{% block content %}
  <main>
    <header id="archives-header" class="centered">
      <h1>{{ title }}</h1>
    </header>

    <section id="archives-content" class="centered">
      <ul class="archive-list">
        {% for post in collections.all_posts %}
          <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <time>{{ post.date | dateFilterNumerals }}</time>
          </li>
        {% endfor %}
      </ul>
    </section>
  </main>
{% endblock content %}
