<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">

    {% if pageType == 'about' %}
      <title>{{ site.authorName }}</title>
    {% else %}
      <title>{{ title }} · {{ site.authorName }}</title>
    {% endif %}

    <script type="module">
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
    </script>

    <link rel="stylesheet" href="/css/base.css">

    {% if description %}
      <meta description="{{ description }}">
      <meta property="og:description" content="{{ description }}">
    {% endif %}

    <meta property="og:title" content="{% if pageType == 'about' %}{{ site.authorName }}{% else %}{{ title }} · {{ site.authorName }}{% endif %}">
    <meta property="og:image" content="{{ site.url }}/images/matthew-lettini-portrait.jpg">
    <meta property="og:image:alt" content="{{ site.authorName }}">
    <meta property="og:locale" content="en_US">
    <meta property="og:site_name" content="{{ site.authorName }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.url }}{{ page.filePathStem }}">
    <meta name="twitter:card" content="summary_large_image">
    <link rel="canonical" href="{{ site.url }}{{ page.filePathStem }}">

    <link rel="icon" href="/images/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/images/matthew-lettini-avatar.jpg">
    <link rel="alternate" href="/feed.xml" type="application/rss+xml" title="Posts">

    <link rel="preload" href="/fonts/LG-Regular.woff2" as="font" type="font/woff2">
    <link rel="preload" href="/fonts/LG-RegularItalic.woff2" as="font" type="font/woff2">
    <link rel="preload" href="/fonts/LG-Bold.woff2" as="font" type="font/woff2">
    <link rel="preload" href="/fonts/LG-BoldItalic.woff2" as="font" type="font/woff2">
    <link rel="preload" href="/fonts/LG-Mono.woff2" as="font" type="font/woff2">

    {% block header_content %}
    {% endblock %}
  </head>
  <body id="{{ pageType }}">

    <header class="base-header">
      <div class="inner">
        <a href="/">{{ site.authorName }}</a>
        <nav>
          <ul>
            <li>
              <a href="/"{% if pageType == 'about' %} class="selected"{% endif %}>About</a>
            </li>
            <li>
              <a href="/work"{% if pageType == 'work' or pageType == 'work-post' %} class="selected"{% endif %}>Work</a>
            </li>
            {#<li>
              <a href="/posts"{% if pageType == 'blog' %} class="selected"{% endif %}>Writing</a>
            </li>#}
          </ul>
        </nav>
      </div>
    </header>

    <main>
      {% block content %}
      {% endblock %}
    </main>

