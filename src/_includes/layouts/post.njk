{% extends 'layouts/base.njk' %}
{% set pageType = 'post' %}

{% block content %}
  <main>
    <article>
      <header id="post-header" class="centered">
        <time>{{ date | dateFilter }}</time>
        <h1>{{ title }}</h1>
      </header>

      <section id="post-content">
        {{ content | safe }}
      </section>

      <section id="post-nav" class="centered do-not-print">
        <nav>
          <ul class="post-nav">
            {% if prevPost.url %}
            <li class="previous">
              &larr; Older
              <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
              <time>{{ prevPost.data.date | dateFilterShorthand}}</time>
            </li>
            {% endif %}
            {% if nextPost.url %}
            <li class="next">
              Newer &rarr;
              <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
              <time>{{ nextPost.data.date | dateFilterShorthand}}</time>
            </li>
            {% endif %}
          </ul>
        </nav>
      </section>
    </article>
  </main>
{% endblock content %}
