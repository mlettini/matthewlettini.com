{% extends 'layouts/base.njk' %}

{% block header_content %}
  <meta name="robots" content="noindex">
{% endblock %}

{% block content %}
  <header class="post-header">
    <div class="inner">
      <h1>{{ title }}</h1>
      <h2>{{ subtitle }}</h2>
    </div>
  </header>

  <section id="post">
    {{ content | safe }}
  </section>

  <section>
    <div class="inner">
      <a class="back" href="/work">← See other work</a>
    </div>
  </section>
{% endblock %}
